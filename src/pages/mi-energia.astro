---

// Modules
import { YouTube } from 'astro-embed';

// Components
import Layout from "../layouts/Layout.astro";
import Fronius2024 from '../sections/screens/mi-energia/Fronius2024.astro';
import BajaTusCostos from '../sections/screens/mi-energia/BajaTusCostos.astro';
import InversorRobusto from '../sections/screens/mi-energia/InversorRobusto.astro';
import VentajasVistazo from '../sections/screens/mi-energia/VentajasVistazo.astro';
import EnergiaRenovable from '../sections/screens/mi-energia/EnergiaRenovable.astro';
import BajaTusCostosList from '../sections/screens/mi-energia/BajaTusCostosList.astro';
import MonitoreeInstalacion from '../sections/screens/mi-energia/MonitoreeInstalacion.astro';
import DisenadoLiderMercado from '../sections/screens/mi-energia/DisenadoLiderMercado.astro';
import SustentabilidadAmbiente from '../sections/screens/mi-energia/SustentabilidadAmbiente.astro';
import SuministroEnergiaRespaldo from '../sections/screens/mi-energia/SuministroEnergiaRespaldo.astro';
import ConfiaEnNuestraExperiencia from '../sections/screens/mi-energia/ConfiaEnNuestraExperiencia.astro';
import MonitoreoSistemaFotovoltaico from '../sections/screens/mi-energia/MonitoreoSistemaFotovoltaico.astro';
import FuncionInstalacionFotovoltaica from '../sections/screens/mi-energia/FuncionInstalacionFotovoltaica.astro';
import InstalacionFotovoltaicaComerciaIndustrial from '../sections/screens/mi-energia/InstalacionFotovoltaicaComerciaIndustrial.astro';

---

<style>

  .descubre-fronius-img {
    background-image: url('/images/screens/fronius/img1.jpg');
    background-size: cover;
    background-position: center;
  }

  .fronius-web-img {
    background-image: url('/images/screens/fronius/img4.jpg');
    background-size: cover;
    background-position: center;
  }

</style>

<Layout title="Fronius" hasBackground>

  

  <ConfiaEnNuestraExperiencia/>

	<DisenadoLiderMercado/>

	<BajaTusCostos/>

  <SustentabilidadAmbiente/>

  <InstalacionFotovoltaicaComerciaIndustrial/>

  <BajaTusCostosList/>

  <EnergiaRenovable/>

  <SuministroEnergiaRespaldo/>
  
  <FuncionInstalacionFotovoltaica/>

  <MonitoreeInstalacion/>

  <MonitoreoSistemaFotovoltaico/>

  <VentajasVistazo/>

  <section class="bg-neutral-200 flex flex-col text-center p-6 md:px-20 lg:px-40 xl:px-60">

    <span class="text-sm">Inversor</span>

    <h3 class="text-2xl font-semibold mb-1">Fronius Tauro</h3>

    <p class="text-lg">
      Este inversor es sostenible en todo, gracias a su desarrollo y producción sostenible de Austria, su diseño innovador es de doble pared y enfriamiento activo.
      Esto hace que Fronius Tauro sea particularmente robusto y resistente a daños, y significa que solo es necesario reemplazar piezas individuales durante el servicio en el sitio, lo que ahorra tiempo y recursos.
    </p>

  </section>
 
  <InversorRobusto/>

  <section class="flex flex-col">

    <YouTube 
      id="https://www.youtube.com/watch?v=mRim7E7y4ow&ab_channel=FroniusSolarEnergy"
      class="w-full max-w-full"
      title="Fronius Tauro"
    />

  </section>

  <Fronius2024/>

</Layout>

