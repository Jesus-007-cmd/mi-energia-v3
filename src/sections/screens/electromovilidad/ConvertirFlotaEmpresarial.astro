---
const imgBackgroundStyle = {
  backgroundImage: 'url(/images/screens/electromovilidad/img23.jpg)',
  backgroundSize: 'cover', // Asegura que la imagen cubra el contenedor
  backgroundPosition: 'center', // Centra la imagen
};

const description = 'Las empresas logísticas que transitan la movilidad eléctrica reducen hasta un 90% de gastos operativos mientras incrementan sus niveles de sostenibilidad.';
---

<!-- Versión para pantallas grandes -->
<div class="hidden md:grid grid-cols-2 text-center">

  <!-- Texto e ícono -->
  <div class="grid grid-cols-7 bg-yellow-500 items-center gap-4 p-6 md:px-20">
    
    <!-- Ícono -->
    <div class="bg-yellow-600 rounded h-20 w-20 flex items-center justify-center col-span-1">
      <span class="text-4xl">!</span>
    </div>
  
    <!-- Texto -->
    <h2 class="text-3xl font-semibold col-span-6">
      {description}
    </h2>

  </div>

  <!-- Imagen -->
  <div style={imgBackgroundStyle} class="h-96"></div>

</div>

<!-- Versión para dispositivos móviles -->
<div class="md:hidden grid grid-cols-1 text-center">

  <!-- Texto e ícono -->
  <div class="bg-yellow-500 flex flex-col items-center gap-4 p-6">
    
    <!-- Ícono -->
    <div class="bg-yellow-600 rounded h-20 w-20 flex items-center justify-center">
      <span class="text-4xl">!</span>
    </div>
  
    <!-- Texto -->
    <h2 class="text-xl font-semibold">
      {description}
    </h2>

  </div>

  <!-- Imagen -->
  <div style={imgBackgroundStyle} class="h-64"></div>

</div>
